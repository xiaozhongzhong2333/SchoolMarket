  line-height: 1.6;
}
.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 3rpx;
 margin-bottom: 20rpx;
 margin-top: 20rpx;
}
.text1{
  font-size: 35rpx;
  font-weight: 20rpx;
  margin-left: 15rpx;
  margin-top: 10rpx;
